---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="course-card">
    <p class="title"><strong>{title}</strong></p>
    <slot />
</div>

<style is:global>
    .course-card {
        @apply rounded-lg border-2 border-stone-200 py-3 px-6 mb-6;
        & > p {
            @apply mb-2 mt-4;
        }
        .title {
            @apply mt-0;
        }
    }
</style>